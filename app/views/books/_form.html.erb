<%= form_with model: book do |f| %>
  <%= render 'shared/error_message', object: f.object %>
  <div class="mb-3">
    <%= f.radio_button :design_type, "circus" %>
    <%= f.label :design_type_circus, "circus" %>
  </div>
  <div class="mb-3">
    <%= f.radio_button :design_type, "fairy_tale" %>
    <%= f.label :design_type_fairy_tale, "fairy_tale" %>
  </div>
  <div class="mb-3">
    <%= f.radio_button :design_type, "car" %>
    <%= f.label :design_type_car, "car" %>
  </div>
  <div class="mb-3">
    <%= f.label :title, "タイトル（10文字以内で入力してください）", class: "col-form-label" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <%= f.submit '決定',class: 'btn btn-secondary m-4'  %>
<% end %>