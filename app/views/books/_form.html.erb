<%= form_with model: book do |f| %>
  <%= render 'shared/error_message', object: f.object %>
  <div class="row mb-5">
    <div class="col">
      <div>
        <%= image_tag 'Circus.png', width: "300", height: "300" %>
      </div>
      <%= f.radio_button :design_type, "circus", class: "form-check-input" %>
      <%= f.label :design_type_circus, "circus", class: "form-check-label" %>
    </div>
    <div class="col">
      <div>
        <%= image_tag 'Fairy.png', width: "300", height: "300" %>
      </div>
      <%= f.radio_button :design_type, "fairy_tale", class: "form-check-input" %>
      <%= f.label :design_type_fairy_tale, "fairy_tale", class: "form-check-label" %>
    </div>
    <div class="col">
      <div>
        <%= image_tag 'Car.png', width: "300", height: "300" %>
      </div>
      <%= f.radio_button :design_type, "car", class: "form-check-input" %>
      <%= f.label :design_type_car, "car", class: "form-check-label" %>
    </div>
  </div>
  <div class="col-4 mb-3">
    <%= f.label :title, "タイトル（10文字以内で入力してください）", class: "col-form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="d-flex justify-content-center">
    <%= f.submit '決定', class: "btn btn-primary m-4" %>
  </div>  
<% end %>